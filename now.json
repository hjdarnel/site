{
  "version": 2,
  "name": "namesite",
  "alias": ["https://darnell.io"],
  "builds": [
    {
      "src": "blog/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "www/index.html",
      "use": "@now/static"
    }
  ],
  "routes": [
      { "src": "/blog/(.*)", "dest": "/blog/$1" },
      { "src": "/blog", "dest": "/blog" },
      { "src": "/(.*)", "dest": "/www/$1" },
      {
        "src": "/static/(.*)",
        "dest": "/blog/static/$1",
        "headers": { "cache-control": "public,max-age=31536000,immutable" }
      },
      {
        "src": "/(.*\\.(js|json|css|ico|png)$)",
        "dest": "/blog/$1",
        "headers": { "cache-control": "public,max-age=31536000,immutable" }
      },
      {
        "src": "/(.*)",
        "dest": "/blog/$1",
        "headers": { "cache-control": "public, max-age=0, must-revalidate" }
      }
  ],
  "github": {
    "silent": true
  }
}
